    <thead>
        <tr><th>Id</th><th>Title</th><th>Text</th><th>AuthorName</th><th>IsFake</th></tr>
    </thead>
    <tbody>
    
        @foreach(var n in collectionNews)
        {
            <tr>
                <td>@n.Id</td>
                <td>@n.Title</td>
                <td>@n.Text</td>
                <td>@n.AuthorName</td>
                <td>@n.IsFake</td>
            </tr>
        }
    </tbody>
</table>

